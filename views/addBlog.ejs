    <section class="text-gray-700 body-font relative">
        <div class="container px-3 py-20 mx-auto" ng-app="blogApp" ng-controller="blogController">
          <div class="flex flex-col text-center w-full mb-12">
            <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Add Blog</h1>
          </div>
          <div class="lg:w-1/2 md:w-2/3 mx-auto">
            <div>
                <form ng-submit="submitBlogDetails()">
                    <div class="form-group col-md-12">
                        <input type="text" ng-model="blog.title" placeholder="Blog Title" class="form-control">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="file" onchange="angular.element(this).scope().uploadFile()" id="largeImage" placeholder="Upload BLog Image" class="form-control" rows="10">
                    <span style="color:{{uploadStatus.color}}">{{uploadStatus.status}}</span>
                    </div>
                    <div class="form-group col-md-12">
                        <textarea ng-model="blog.article" placeholder="Blog Article" class="form-control" rows="20"></textarea>
                    </div>
                    <div class="form-group col-md-12">
                        <button type="submit" class="btn btn-primary">SUBMIT</button>
                    </div>
                </form>
            </div>
              <div class="p-2 w-full pt-8 mt-8 border-t border-gray-200 text-center">
