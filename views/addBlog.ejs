    <script>
        var app = angular.module('blogApp', []);
        app.controller('blogController', function($scope, $http){

            $scope.blog = {};

            $scope.uploadStatus = {};

            $scope.submitBlogDetails = function(){
                console.log($scope.blog);
                $http({
                    url:"http://localhost:9000/uploadBlog",
                    method:"POST",
                    data:$scope.blog,
                    headers:{"Content-Type":"application/json"}
                }).then(function successCallback(res){
                    console.log(res);
                }, function errorCallback(err){
                    console.log(err);
                });
            }
           
            $scope.uploadFile = function(){
                $scope.uploadStatus = {
                    color:"red",
                    status:"Uploading..."
                };
                var files = document.getElementById('largeImage').files[0];
                var fd = new FormData();
                fd.append('uploads', files);
                $http({
                    url:"http://localhost:9000/uploadBlogImage",
                    method:"POST",
                    data:fd,
                    headers:{
                        'Content-Type': undefined
                    }
                }).then(function successCallback(res){
                    $scope.uploadStatus = {
                    color:"green",
                    status:"Uploaded!"
                };
                    $scope.blog.blogImagePath = res.data.filePath;
                    console.log(res);
                },function errorCallback(err){
                    console.log(err);
                });
            }

        });
    </script>
